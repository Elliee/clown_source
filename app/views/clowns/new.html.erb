
<div class="background-container-image">
 <div class="button-home">
    <%= link_to 'Return home', clowns_path, class: "btn btn-secondary button-home" %>
  </div>

  <div class="container">
    <div class="form-container">
        <h1>Start Listing</h1>
        <p>Create a new clown in seconds!</p>
      <%= simple_form_for @clown do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit "Create new clown", class: "btn btn-primary button-form" %>
      <% end %>
    </div>
  </div>
</div>
