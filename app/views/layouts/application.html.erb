<!DOCTYPE html>
<html>
  <head>
    <title>ClownSource</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>
  <body>
    <% if current_page?(root_path) %>
      <div class="home-nav home-nav-fixed">
        <div class="home-logo"></div>
        <% if user_signed_in? %>
          <div>
            <%= link_to "Dashboard", dashboard_path, class: "btn btn-primary" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
          </div>
        <% else  %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    <% else %>
      <div class="home-nav nav-grey">
        <div class="home-logo"></div>
        <% if user_signed_in? %>
          <div>
            <% if current_page?(dashboard_path) %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
            <% else %>
              <%= link_to "Dashboard", dashboard_path, class: "btn btn-primary dashboard-btn" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
            <% end %>
          </div>
        <% else  %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
